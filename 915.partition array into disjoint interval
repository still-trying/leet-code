class Solution {
public:
    int partitionDisjoint(vector<int>& nums) {
        
         int n = nums.size();
        vector<int> mn(n);
        mn[n-1] = nums[n-1];
       
        for(int i = n - 2; i >= 0; --i) {
            mn[i] = min(mn[i+1], nums[i]);
        }

        int mx = INT_MIN;
       
        for(int i = 0; i < n - 1; ++i) {
            mx = max(mx, nums[i]);
            if(mx <= mn[i+1]) {
                return i + 1; 
            }
        }
        return 0; 
    }
};
